prototype(Neos.Fusion.Form:Select)  < prototype(Neos.Fusion.Form:Field) {
    attributes = Neos.Fusion:DataStructure
    renderer = afx`
        <select
            {...props.attributes}
            type="text"
            name={field.name}
        >
            {props.content}
        </select>
    `

    // check against field.value as for automatic selected state
    prototype(Neos.Fusion.Form:Select.Option) {
        selected = ${field && (field.value == this.value)}
    }
}
