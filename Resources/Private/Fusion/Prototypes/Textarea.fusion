prototype(Neos.Fusion.Form:Textarea)  < prototype(Neos.Fusion.Form:FieldComponent) {
    @propTypes {
        content = ${PropTypes.string}
    }

    content = ''

    renderer = afx`
        <textarea
            name={field.name}
            {...Array.set(props, 'content' , null)}
        >
            {Form.stringifyValue(field.value || props.content)}
        </textarea>
    `
}
