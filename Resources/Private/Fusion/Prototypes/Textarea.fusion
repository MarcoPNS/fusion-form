prototype(Neos.Fusion.Form:Textarea)  < prototype(Neos.Fusion.Form:FieldComponent) {
    renderer = afx`
        <textarea
            {...props.attributes}
            id={props.id}
            class={props.class}
            type="text"
            name={field.name}
            required={props.required}
        >{Form.stringifyValue(field.value || props.value)}</textarea>
    `
}
