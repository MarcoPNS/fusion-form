prototype(Neos.Fusion.Form:Button) < prototype(Neos.Fusion.Form:FieldComponent) {

    attributes.type = 'submit'

    renderer = afx`
        <button
            name={field.getName()}
            value={Form.stringifyValue(field.getValue())}
            {...props.attributes}
        >
            {props.content}
        </button>
    `
}
