prototype(Neos.Fusion.Form:Input)  < prototype(Neos.Fusion.Form:Component.Field) {
    @propTypes {
        type = ${PropTypes.string}
        value = ${PropTypes.any}
    }

    attributes.type = 'text'

    renderer = afx`
        <input
            name={field.getName()}
            value={field.getCurrentValueStringified() || field.getTargetValueStringified()}
            {...props.attributes}
        />
    `
}
