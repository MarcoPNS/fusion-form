prototype(Neos.Fusion.Form:Input)  < prototype(Neos.Fusion.Form:FieldComponent) {
    @propTypes {
        type = ${PropTypes.string}
        value = ${PropTypes.any}
    }

    attributes.type = 'text'

    renderer = afx`
        <input
            name={field.getName()}
            value={field.getCurrentValue(true) || field.getTargetValue(true)}
            {...props.attributes}
        />
    `
}
