prototype(Neos.Fusion.Form:Radio)  < prototype(Neos.Fusion.Form:FieldComponent) {

    renderer = afx`
        <input
            type="radio"
            name={field.name}
            value={Form.stringifyValue(props.field.value)}
            checked={false}
            checked.@process.singleValue={Form.stringifyValue(field.value) == Form.stringifyValue(props.field.value)}
            checked.@process.singleValue.@if.has={field.value}
            {...props.attributes}
        />
    `

}
